{
    "$schema": "./node_modules/ng-packagr/ng-package.schema.json",
    "dest": "./dist",
    "lib": {
        "cssUrl": "inline",
        "entryFile": "./src/index.ts",
        "styleIncludePaths": ["./styling", "./node_modules/smartedit-build/styles/"]
    },
    "assets": [
        "./styling",
        {
            "input": "./node_modules/smartedit-build/styles",
            "glob": "**/*.scss",
            "output": "./styling"
        }
    ],
    "allowedNonPeerDependencies": ["."]
}
